{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "htdocs"],
  "include": ["src/**/*.vue", "src/**/*.js", "src/**/*.less"],
  "vueCompilerOptions": {
    "target": 2, // For Vue version <= 2.6.14
  }
}
